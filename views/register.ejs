<h1>Register</h1>
<div class="row">
    <!-- Employee registration form -->
    <form action="/employees/register" method="post" class="col-6 mx-auto">
        <div class="mb-2">
            <label for="employee-name" class="form-label">Name</label>
            <input type="text" name="name" id="employee-name" class="form-control">
        </div>
        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
        </div>
        <div class=" mb-2">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control">
        </div>
        <div class="mb-2">
            <label for="confirm_password" class="form-label">Confirm</label>
            <input type="password" id="confirm_password" name="confirm_password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a href="/employees/login" class="btn btn-primary">Login</a>
    </form>
</div>